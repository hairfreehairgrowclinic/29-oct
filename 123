<script>
const gradeData = {
  1:{range:"1000‚Äì1200",grafts:1100,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/02.webp"},
  2:{range:"1200‚Äì1500",grafts:1350,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/01-2.webp"},
  3:{range:"1500‚Äì2200",grafts:1850,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/02-4.webp"},
  4:{range:"2200‚Äì2800",grafts:2500,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/02-6.webp"},
  5:{range:"2800‚Äì3500",grafts:3150,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/01-8.webp"},
  6:{range:"3500‚Äì4500",grafts:4000,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/02-11.webp"},
  7:{range:"4500‚Äì6000",grafts:5250,img:"https://hairfreehairgrow.com/wp-content/uploads/2025/03/01-13.webp"}
};

// Grade click ‚Üí Autofill grafts
document.querySelectorAll("#gradePreview img").forEach(img=>{
  img.addEventListener("click",e=>{
    const g=e.target.dataset.grade;
    document.querySelectorAll("#gradePreview img").forEach(i=>i.classList.remove("active"));
    e.target.classList.add("active");
    const d=gradeData[g];
    const graft=document.getElementById("grafts");
    graft.value=d.grafts;
    graft.focus(); graft.select();
    document.getElementById("graftRange").innerText=`üí° Suggested: ${d.range}`;
    document.getElementById("gradePreview").dataset.selected=g;
  });
});

// Calculate
document.getElementById("calculateBtn").addEventListener("click",()=>{
  const name=document.getElementById("username").value.trim();
  const city=document.getElementById("city").value.trim();
  const grafts=parseInt(document.getElementById("grafts").value);
  const rate=parseInt(document.getElementById("technique").value);
  const grade=document.getElementById("gradePreview").dataset.selected;
  const phone=document.getElementById("phone").value.trim();

  if(!phone.match(/^[0-9]{10}$/)){
    alert("üìû Please enter a valid 10-digit phone number.");
    document.getElementById("phone").focus();
    return;
  }
  if(!grafts||grafts<=0){
    alert("üí° Please enter grafts or select grade.");
    return;
  }

  const totalMin=grafts*rate*0.9, totalMax=grafts*rate*1.1;
  const minMarket=Math.round(totalMin-10000), maxMarket=Math.round(totalMax+40000);
  document.getElementById("greeting").innerText=name?`Hi ${name},`:"Hi üëã";
  document.getElementById("total").innerText=`${totalMin.toLocaleString()} ‚Äì ${totalMax.toLocaleString()}`;
  document.getElementById("marketPriceRange").innerText=`${minMarket.toLocaleString()} ‚Äì ${maxMarket.toLocaleString()}`;
  document.getElementById("techniqueDisplay").innerText=document.getElementById("technique").selectedOptions[0].text;
  document.getElementById("cityDisplay").innerText=city||"‚Äî";
  document.getElementById("gradeDisplay").innerText=grade?"Grade "+grade:"Not Selected";

  const before=document.getElementById("beforeAfter");
  if(grade){
    before.innerHTML=`<h4>üéØ Before & After (Grade ${grade})</h4>
    <img src="${gradeData[grade].img}" alt="Grade ${grade} result">`;
  } else before.innerHTML="";

  const result=document.getElementById("result");
  result.classList.remove("show");
  void result.offsetWidth;
  result.classList.add("show");
  result.scrollIntoView({behavior:"smooth"});
  document.getElementById("calculateBtn").innerText="Recalculate üîÑ";
});
</script>
